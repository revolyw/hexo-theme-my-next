//
// Layout
// Note: Must name this file "outline" instead of "layout"
//       Or Hexo will use it as template layout.
// =================================================


html, body { height: 100%; background:#F6F7FB; }

.container {
  position: relative;
  min-height: 100%;
}


// Header Section
// --------------------------------------------------
.header-inner {
  margin: 0 auto;
  padding: 100px 0 70px;
  width: $content-desktop;

  +desktop-large() {
    .container & { width: $content-desktop-large; }
  }
}

// Main Section
// --------------------------------------------------
.main { padding-bottom: $footer-height + $gap-between-main-and-footer; background:#F6F7FB; }
.main-inner {
  margin: 0 auto;
  //width: $content-desktop;
  width: 80%;
  padding:.5em 1.5em 3em 1.5em;
  //四周阴影
  box-shadow:5px 5px 10px #eee,-5px -5px 10px #eee;

  +desktop-large() {
    .container & { width: $content-desktop-large; }
  }
  background:#fff; 
}


// Footer Section
// --------------------------------------------------
.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  min-height: $footer-height;
}
.footer-inner {
  box-sizing: border-box;
  margin: 20px auto;
  width: $content-desktop;

  +desktop-large() {
    .container & { width: $content-desktop-large; }
  }
}
