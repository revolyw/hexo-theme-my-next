.back-to-top {
  box-sizing: border-box;
  position: fixed;
  bottom: $b2t-position-bottom;
  right: $b2t-position-right;
  z-index: $zindex-5;
  padding: 0 6px;
  width: 25px;
  background: $whitesmoke;
  font-size: $b2t-font-size;
  opacity: $b2t-opacity;
  color: $black-deep;
  cursor: pointer;
  text-align: center;
  -webkit-transform: translateZ(0);
  transition-property: bottom;
  the-transition();
  box-shadow:1px 1px 2px #eee,-1px -1px 2px #eee;
  border-radius:5px;

  +mobile() {
    display: none;
  }
  +tablet() {
    display: none;
  }

  &.back-to-top-on {
    bottom: $b2t-position-bottom-on;
  }
}
